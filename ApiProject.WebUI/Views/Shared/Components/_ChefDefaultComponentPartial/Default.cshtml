@using ApiProject.WebUI.Dtos.ChefDto
@model List<ResultChefDto>
<section id="chefs" class="chefs section">

    <div class="container section-title" data-aos="fade-up">
        <h2>Şefler</h2>
        <p><span>Mutfaktaki</span> <span class="description-title">Profesyonel Şefler<br></span></p>
    </div>

    <div class="container">

        <div class="row gy-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                    <div class="team-member">
                        <div class="member-img">
                            <img src="@item.ImageUrl" class="img-fluid" alt="">
                            <div class="social">
                                <a href=""><i class="bi bi-twitter-x"></i></a>
                                <a href=""><i class="bi bi-facebook"></i></a>
                                <a href=""><i class="bi bi-instagram"></i></a>
                                <a href=""><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                        <div class="member-info">
                            <h4>@item.NameSurname</h4>
                            <span>@item.Title</span>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }     
        </div>
    </div>

</section>

<!-- Scroll Top -->
<a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

